<?xml version="1.0" encoding="UTF-8"?>

<!-- 
Created by Daniel Berzanti <deebee2012@rocketmail.com>
Based on the Vibrant Nerd (that was based on Darkmacs theme).
-->

<style-scheme id="purple_penguin" _name="Purple Penguin" version="1.0">
  <author>Daniel Berzanti</author>
  <_description>Based on theme 'Vibrant Nerd' hack of Darkmacs</_description>

<!-- Colors  -->
  <color name="gray" value="#B5C4C6"/>
  <color name="white" value="#ffffff"/>
  <color name="black" value="#2C323E"/>
  <color name="green" value="#7CC6A2"/>
  <color name="aqua" value="#00d8ff"/>
  <color name="blue" value="#398EE6"/>
  <color name="lightskyblue" value="#87CEFA"/>
  <color name="purple" value="#B374EB"/>
  <color name="lime" value="#CCFF00"/>
  <color name="carbon" value="#232323"/>
  <color name="salmon" value="#fa8072"/>
  <color name="steelblue3" value="#4f94cd"/>
  <color name="palevioletred2" value="#7A5585"/>
  <color name="pink" value="#FF00EC"/>
  <color name="red" value="#ff0000"/>

<!-- Global Settings -->
  <style name="selection" foreground="#f8f8f8" background="#253b76" bold="true"/>
  <style name="text" foreground="lightskyblue" background="black"/>
  <style name="cursor" foreground="white"/>
  <style name="current-line" background="black"/>
  <style name="line-numbers" foreground="gray" background="#111"/>
  
<!-- Bracket Matching -->
  <style name="bracket-match" background="steelblue3" bold="true"/>
  <style name="bracket-mismatch" background="purple" bold="true"/>
  <style name="search-match" foreground="#2BFF00" background="palevioletred2"/>

<!-- Comments -->
  <style name="def:comment" foreground="gray"/>
  <style name="def:shebang" foreground="blue"/>
  <style name="def:doc-comment-element" foreground="blue" bold="true"/>

<!-- Constants and Variables-->
  <style name="def:constant" foreground="aqua"/>
  <style name="def:string" foreground="green"/>
  <style name="def:special-char" foreground="purple"/>
  <style name="def:special-constant" foreground="purple"/>
  <style name="def:boolean" foreground="pink" bold="true"/>
  <style name="def:number" foreground="lime"/>
  <style name="def:floating-point" foreground="white"/>
  <style name="def:keyword" foreground="pink" bold="true"/>
  <style name="def:builtin" foreground="lightskyblue" bold="true"/>
  <style name="def:variable" foreground="purple" bold="true"/>
  <style name="def:special-variable" foreground="aqua" bold="true"/>
  
<!-- Identifiers -->
  <style name="def:identifier" foreground="purple"/>

<!-- Statements -->
  <style name="def:statement" foreground="lightskyblue"/>

<!-- Types -->
  <style name="def:type" foreground="blue"/>
  
<!-- Others -->
  <style name="def:error" foreground="white" background="red" bold="true"/>
  <style name="def:note" foreground="black" background="lime" bold="true"/>
  <style name="def:net-address-in-comment" foreground="blue" italic="true" underline="true"/>
  <style name="def:preprocessor" foreground="purple" bold="true"/>

<!-- Unknown? -->
  <style name="def:specials" foreground="white" background="purple"/>

<!-- PHP Styles -->
  <style name="php:module-handler" foreground="lightskyblue"/>
  <style name="php:symbol" foreground="lightskyblue"/>
..<style name="php:variable" foreground="aqua"/>
  <style name="php:special-variable" foreground="pink"/>
  <style name="php:predefined-variable" foreground="purple"/>
  <style name="php:regex" foreground="green"/>
  <style name="php:string" foreground="#80a6ff"/>

<!-- C Styles -->
  <style name="c:preprocessor" foreground="purple" map-to="def:special-char"/>

<!-- Diff Styles -->
  <style name="diff:ignore" foreground="gray"/>

<!-- Ruby Styles -->
  <style name="ruby:module-handler" foreground="blue"/>
  <style name="ruby:symbol" foreground="blue"/>
  <style name="ruby:special-variable" foreground="lime"/>
  <style name="ruby:predefined-variable" foreground="purple"/>
  <style name="ruby:regex" foreground="green"/>

<!-- SH Styles -->
  <style name="sh:function" foreground="salmon"/>
  <style name="sh:variable1" foreground="purple"/>
  <style name="sh:variable2" foreground="purple"/>
  <style name="sh:others" map-to="text"/>
  
<!-- XML Styles -->
  <style name="xml:attribute-name" foreground="purple"/>
  <style name="xml:element-name" foreground="blue"/>

</style-scheme>
